{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": "error",
        "quotes": [
            "error",
            "single"
        ],
        "no-trailing-spaces": "error",
        "no-var": "error",
        "newline-per-chained-call": "error",
        "newline-after-var": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "padded-blocks": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            2,
            {
                "ImportDeclaration": "first"
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "no-magic-numbers": "error"
    }
}